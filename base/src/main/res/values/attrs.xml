<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义标题-->
    <declare-styleable name="TitleBar">
        <attr name="tb_title" format="string" />
        <attr name="tb_navigator_icon" format="integer" />
        <attr name="tb_action_icon" format="integer" />
        <attr name="tb_navigator_label" format="string" />
        <attr name="tb_action_label" format="string" />
        <attr name="tb_action_text_color" format="color" />
        <attr name="tb_hide_navigator_icon" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ColorTrackTabViewIndicator">
        <attr name="ctTabSelectedTextColor" format="color"/>
        <attr name="ctTabIndicatorColor" format="color"/>
        <attr name="ctTabTextColor" format="color"/>
        <attr name="ctTabTextSize" format="dimension"/>
        <attr name="ctTabWidth" format="dimension"/>
        <attr name="ctTabGravity" format="enum">
            <enum name="Grivity_Fill" value="0"/>
            <enum name="Grivity_Center" value="1"/>
        </attr>
        <attr name="ctMode">
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="ColorTrackView">
        <attr name="ctvText" format="string"/>
        <attr name="ctvText_size" format="dimension"/>
        <attr name="ctvText_origin_color" format="color"/>
        <attr name="ctvText_change_color" format="color"/>
        <attr name="ctvProgress" format="float"/>
        <attr name="ctvDirection" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MaterialSearchView">
        <attr name="searchBackground" format="integer" />
        <attr name="searchVoiceIcon" format="integer" />
        <attr name="searchCloseIcon" format="integer" />
        <attr name="searchBackIcon" format="integer" />
        <attr name="searchSuggestionIcon" format="integer" />
        <attr name="searchSuggestionBackground" format="integer" />

        <attr name="android:inputType" />

    </declare-styleable>

    <!--<attr name="android:hint" />-->
    <!--<attr name="android:textColor" />-->
    <!--<attr name="android:textColorHint" />-->
</resources>